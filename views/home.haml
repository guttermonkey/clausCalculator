      %select{:name => "firstdeg1age"}
        %option{:value => "0"} 20-29
        %option{:value => "1"} 30-39
        %option{:value => "2"} 40-49
        %option{:value => "3"} 50-59
        %option{:value => "4"} 60-69
        %option{:value => "5"} 70-79
